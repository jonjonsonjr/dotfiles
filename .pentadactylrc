colorscheme molokai

" more general home-row prioritized hint keys
" comment out if you prefer numbers are typing text of the link
set hintkeys='sadfjklewcmpgh'

" monokai reference colors:
" dark:  #272822
" pink:  #F92672
" blue:  #66D9EF
" green: #A6E22E
" ornge: #FD971F

" hint Styling: Overwrites some from colorscheme
hi Hint background:linear-gradient(#272822,#000);box-shadow:0 2px 3px rgba(0,0,0,0.5);border:1px solid #474842;border-radius:0px;padding:0px 3px;opacity:0.75;color:#66d9ef;font-size:10px;font-familt:"Trebuchet MS",Helvetica,sans-serif;text-transform:uppercase;
hi Hint[active] color:#fd971f;border-color:#fd971f;
hi HintElem background-colorinherit !important;color:#272822 !important; -moz-box-shadow:0px 0px 2px 2px rgba(102,217,239,0.5);

" moving between tabs
nmap <C-l> gt
nmap <C-h> gT

" close tabe alternate
" close active tab
nmap x d
" restore tab
nmap X u
" close all other tabs
nmap <C-X> :tabonly<CR>

" re-arrange tabs
nmap <A-j> :tabmove -1<CR>
nmap <A-k> :tabmove +1<CR>

" moving between tabs in insert mode
imap <silent> <C-l> <ESC>gt
imap <silent> <C-h> <ESC>gT

" home row ESC
imap <silent> <C-k> <ESC>

